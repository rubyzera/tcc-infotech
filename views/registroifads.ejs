<html lang="pt-BR">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-blog content">
    <form action="/ifads" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" required>
      <br>
      <label for="sexo">Sexo<br></label>
      <label>
        <input type="radio" name="sexo" value="Feminino" checked>Feminino
      </label>
      <label>
        <input type="radio" name="sexo" value="Masculino">Masculino
      </label>
      <label>
        <input type="radio" name="sexo" value="Outro">Outro
      </label>
      <input type="text" id="sexo">
      <br>
      <label for="prontuario">Prontuário (caso seja aluno do IF)</label>
      <input type="text" id="prontuario" name="prontuario" required></input type="text">
      <br>
      <label for="datanasc">Data de nascimento</label>
      <input type="date" id="datanasc" name="datanasc" required>
      <br>
      <label for="email">E-mail:</label>
      <input type="email" id="email" name="email" required>
      <br>
      <label for="telefone">Telefone:</label>
      <input type="text" id="telefone" name="telefone" required>
      <br>
      <label for="cidade">Cidade:</label>
      <input type="text" id="cidade" name="cidade" required>
      <br>
      <label for="senha">Senha</label>
      <input type="password" id="senha" name="senha" required>
      <label for="trabalha">Trabalha na área?</label>
      <input type="text" id="trabalha" name="trabalha" required></input type="text">
      <label for="trabalhaoque">Se respondeu sim, trabalha com que?</label>
      <input type="text" id="trabalhaoque" name="trabalhaoque"></input type="text">
      <br>
      <label for="areasinteresse">Quais são suas áreas de interesse no TI?</label>
      <input type="text" id="areasinteresse" name="areasinteresse" required></input type="text">
      <br>
      <button>Enviar</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>